<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/altitud_en_metros"
        android:textColor="@color/white"
        android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/altitud_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/extra_big_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/velocidad_en_km_h"
        android:textColor="@color/white"
        android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/velocidad_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/extra_big_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicion_m"
        android:textColor="@color/white"
        android:textSize="@dimen/big_text" />

    <TextView
        android:id="@+id/medida_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/extra_big_text" />

    <Button
        android:layout_margin="@dimen/big_margin"
        android:id="@+id/empezar_a_medir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="empezar a medir"
        android:textColor="@color/white"
        android:textSize="@dimen/big_text" />

</LinearLayout>